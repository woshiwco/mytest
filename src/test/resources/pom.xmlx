<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <!--指定POM模型版本-->
    <modelVersion>4.0.0</modelVersion>
    <!--引入父模块-->
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.2.9.RELEASE</version>
        <!--<relativePath></relativePath>--><!--父项目POM文件路径-->
    </parent>
    <!--子模块-->
    <modules>
        <module>temp</module>
    </modules>
    <!--项目坐标-->
    <groupId>groupId</groupId><!--所属组织ID标识-->
    <artifactId>mytest</artifactId><!--项目(工件)ID标识-->
    <version>1.0-SNAPSHOT</version><!--项目版本-->
    <packaging>pom</packaging><!--项目打包方式，如：jar、war、pom等-->
    <!--项目配置-->
    <properties>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <zdy.key>zdy.value</zdy.key><!--在POM中使用${zdy.key}引用-->
    </properties>
    <!--maven项目属性文档-->
    <name/>
    <description/>
    <url/>
    <organization/>
    <inceptionYear/>
    <prerequisites/>
    <issueManagement/>
    <ciManagement/>
    <mailingLists/>
    <developers/>
    <contributors/>
    <licenses/>
    <scm/>
    <reporting/>
    <!--远程仓库-->
    <repositories>
        <repository>
            <id>setting.xml-mirrorOf</id>
            <name>name</name>
            <url>url</url>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>daily</updatePolicy><!--：always|daily(缺省值)|interval:<数值分钟>|never-->
                <checksumPolicy>fail</checksumPolicy><!--ignore|fail|warn-->
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <layout>default</layout><!--default|legacy-->
        </repository>
    </repositories>
    <pluginRepositories/><!--同上-->
    <!--项目分发(部署)-->
    <distributionManagement>
        <repository><!--仓库信息-->
            <id>id</id>
            <name>name</name>
            <url>url</url>
            <uniqueVersion/>
        </repository>
        <snapshotRepository><id>id</id></snapshotRepository>
        <site/>
        <downloadUrl/>
        <relocation/>
    </distributionManagement>
    <!--项目配置-->
    <profiles>
        <profile><!--根据环境参数动态激活相应profile-->
            <id>id</id>
            <activation><!--激活条件-->
                <activeByDefault>false</activeByDefault><!--是否默认激活-->
                <jdk>1.8</jdk><!--支持与或非-->
                <os>
                    <name>Windows XP</name>
                    <family>Windows</family>
                    <arch>x86</arch>
                    <version>5.1.2600</version>
                </os>
                <property>
                    <name>key</name>
                    <value>value</value>
                </property>
                <file>
                    <exists>path</exists>
                    <missing>path</missing>
                </file>
            </activation>
            <!--...-->
        </profile>
    </profiles>
    <!--依赖管理-->
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>groupId</groupId>
                <artifactId>artifactId</artifactId>
                <version>version</version>
                <classifier>xx</classifier><!--区分器-->
                <type>jar</type><!--jar(缺省值)-->
                <scope>system</scope><!--compile(缺省值)|provided|runtime|test|optional|system-->
                <exclusions><!--排除传递依赖-->
                    <exclusion>
                        <groupId>xx</groupId>
                        <artifactId>xx</artifactId>
                    </exclusion>
                </exclusions>
                <optional>true</optional><!--是否阻断传递依赖-->
                <systemPath>../lib/httpclient-4.5.13.jar</systemPath>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <dependencies/><!--同上-->


    <!--构建项目-->
    <build>
        <sourceDirectory>../../main/java</sourceDirectory><!--maven默认按照maven规约目录来,下同-->
        <!--<scriptSourceDirectory>./src/main/resources</scriptSourceDirectory>-->
        <outputDirectory>./target/classes</outputDirectory>
        <testSourceDirectory>../java</testSourceDirectory>
        <testOutputDirectory>./target/test-classes</testOutputDirectory>
        <resources>
            <resource>
                <!--<targetPath></targetPath>--><!--默认为target/classes目录-->
                <filtering>true</filtering><!--是否启用filters中文件参数代替(@xx@)，参数取自properties-->
                <directory>../../main/resources</directory>
                <includes>
                    <include>*.*</include>
                </includes>
                <excludes/>
            </resource>
        </resources>
        <testResources/>
        <extensions><!--构建扩展-->
            <extension>
                <groupId>groupId</groupId>
                <artifactId>mytest</artifactId>
                <version>1.0-SNAPSHOT</version>
            </extension>
        </extensions>
        <defaultGoal>install</defaultGoal><!--mvn无指定指令时的默认指令-->
        <directory>xx</directory><!--指定构建目录(缺省值target/)-->
        <finalName>xx</finalName><!--工件名(缺省值<artifactId-version>)-->
        <filters><filter></filter></filters><!--见filtering-->
        <!--插件管理-->
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-antrun-plugin</artifactId>
                    <version>1.8</version>
                    <extensions>false</extensions><!--是否加载插件扩展-->
                    <executions><!--构建生命周期时执行的配置-->
                        <execution>
                            <id>myEcho</id>
                            <phase>validate</phase><!--阶段-->
                            <goals><!--目标-->
                                <goal>run</goal>
                            </goals>
                            <inherited>true</inherited><!--配置是否传递到子模块-->
                            <configuration>
                                <tasks>
                                    <echo>echo:${project.build.directory}</echo>
                                </tasks>
                            </configuration>
                            <!--<configuration/>&lt;!&ndash;插件配置项&ndash;&gt;-->
                        </execution>
                    </executions>
                    <dependencies/><!--插件所需依赖-->
                    <inherited>true</inherited>
                    <configuration/>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.8.0</version>
                <configuration>
                    <compilerArgs>
                        <arg>-extdirs</arg>
                        <arg>${project.basedir}/lib</arg>
                    </compilerArgs>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>3.2.0</version>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>xxx</mainClass>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>3.3.0</version>
                <configuration>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>